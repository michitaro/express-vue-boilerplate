{
  "name": "echo-backend",
  "version": "0.0.0",
  "directories": {
    "test": "src/"
  },
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production ts-node -r tsconfig-paths/register src/main.ts",
    "dev": "npm run build && cross-env NODE_ENV=development nodemon --inspect=5859 -r ts-node/register -r tsconfig-paths/register src/main.ts",
    "build": "mkdir -p build ; npx quicktype --lang schema ../shared/api-schema/*.ts -o build/api-schema.json",
    "test": "mocha --require espower-typescript/guess --require tsconfig-paths/register 'src/**/*.test.ts'",
    "test-watch": "mocha --watch --watch-extensions ts --require espower-typescript/guess --require tsconfig-paths/register 'src/**/*.test.ts'"
  },
  "dependencies": {
    "@types/cookie-session": "^2.0.36",
    "@types/express": "^4.16.0",
    "@types/ldapjs": "^1.0.3",
    "@types/mongoose": "^5.3.7",
    "ajv": "^6.6.2",
    "cookie-session": "^2.0.0-beta.3",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "http-status-codes": "^1.3.0",
    "ldapjs": "^1.0.2",
    "mongoose": "^5.4.4",
    "morgan": "^1.9.1",
    "quicktype": "^15.0.167",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "typegoose": "^5.4.1"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "@types/power-assert": "^1.5.0",
    "espower-typescript": "^9.0.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0",
    "power-assert": "^1.6.1",
    "typescript": "^3.2.2"
  },
  "author": {
    "name": "michitaro"
  }
}
